<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/source_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/source_item_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    tools:srcCompat="@drawable/mangalib"
                    android:contentDescription="@string/app_name" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/source_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="Some sourceEntity name"
                    android:gravity="center_vertical"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/source_item_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="https://sourcelink.com"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>